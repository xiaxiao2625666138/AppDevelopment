<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <resource-ref>
        <res-ref-name>jdbc/ebook</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <filter>
        <filter-name>CommonFilter</filter-name>
        <filter-class>com.zxz.ebook.filter.CommonFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CommonFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.zxz.ebook.loginRegisterLogout.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.zxz.ebook.loginRegisterLogout.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.zxz.ebook.loginRegisterLogout.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.zxz.ebook.HomeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>DetailServlet</servlet-name>
    <servlet-class>com.zxz.ebook.DetailServlet</servlet-class>
</servlet>

    <servlet-mapping>
        <servlet-name>DetailServlet</servlet-name>
        <url-pattern>/DetailServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddOrderServlet</servlet-name>
        <servlet-class>com.zxz.ebook.shopping.AddOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddOrderServlet</servlet-name>
        <url-pattern>/AddOrderServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>com.zxz.ebook.shopping.AddBookServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/AddBookServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChooseOrderServlet</servlet-name>
        <servlet-class>com.zxz.ebook.shopping.ChooseOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChooseOrderServlet</servlet-name>
        <url-pattern>/ChooseOrderServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChooseAllOrderServlet</servlet-name>
        <servlet-class>com.zxz.ebook.shopping.ChooseAllOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChooseAllOrderServlet</servlet-name>
        <url-pattern>/ChooseAllOrderServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <servlet-class>com.zxz.ebook.shopping.DeleteOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteOrderServlet</servlet-name>
        <url-pattern>/DeleteOrderServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PayOrderServlet</servlet-name>
        <servlet-class>com.zxz.ebook.shopping.PayOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PayOrderServlet</servlet-name>
        <url-pattern>/PayOrderServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllOrderToPaidServlet</servlet-name>
        <servlet-class>com.zxz.ebook.AllOrderToPaidServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllOrderToPaidServlet</servlet-name>
        <url-pattern>/AllOrderToPaidServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginRegisterServlet</servlet-name>
        <servlet-class>com.zxz.ebook.LoginRegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginRegisterServlet</servlet-name>
        <url-pattern>/LoginRegisterServlet</url-pattern>
    </servlet-mapping>


</web-app>